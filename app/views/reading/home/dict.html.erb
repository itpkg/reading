<fieldset>
  <legend><%= @title = t 'reading.dict' %></legend>
  <%= form_tag do %>
      <div class="form-group">
        <%= label_tag :keywords, t('reading.fields.keywords') %>
        <%= text_field_tag :keywords, '', {class: 'form-control'} %>
      </div>
      <%= submit_tag t('buttons.submit'), {class: 'btn btn-default'} %>
  <% end %>
</fieldset>

<br/>
<% if @result %>
    <div class="row">
  <pre>
    <code><%= @result %></code>
  </pre>
    </div>
<% end %>