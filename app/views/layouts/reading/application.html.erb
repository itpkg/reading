<!DOCTYPE html>
<html>
<head>
  <%= render 'shared/meta' %>
  <%= stylesheet_link_tag 'reading/application', media: 'all' %>
  <%= javascript_include_tag 'reading/application' %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to Setting.get_site_info(:subTitle), main_app.root_url(locale: params[:locale]), {class: 'navbar-brand'} %>
    </div>
    <div id="navbar" class="navbar-collapse collapse">
      <ul class="nav navbar-nav">
        <li><%= link_to t('reading.index'), root_path %></li>
        <li><%= link_to t('reading.books'), books_path %></li>
        <li><%= link_to t('reading.notes'), notes_path %></li>
        <li><%= link_to t('reading.members'), new_member_path %></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <%= render 'shared/sign_in_or_out' %>
      </ul>
    </div>
  </div>
</nav>
<%= yield :top %>
<div class="container">
  <%= render 'shared/flash_box' %>
  <br/>
  <%= yield %>
  <%= render 'shared/footer' %>
</div>

</body>
</html>
