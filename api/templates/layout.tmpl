            <!--</div>-->
            <!--<button type="submit" class="btn btn-success">Sign in</button>-->
            <!--</form>-->
        </div>
    </div>
</nav>
<div class="container">
    <div class="row">
        {{ template "root" .}}
    </div>
    <hr>
    <footer>
        <p>{{ .Site.Copyright }}</p>
    </footer>
</div>
<script>
    $(function(){
        $('.markdown').each(function(){
            $(this).html(marked($(this).text()));
        });
    });
</script>
</body>
</html>

